<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:controls="using:WonderLab.Views.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
			<controls:FontIcon Glyph="&#xE76E;"
							   Foreground="Black"/>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
	<Style Selector="controls|FontIcon">		
		<Setter Property="FontFamily"
				Value="resm:WonderLab.Assets.Fonts.SegoeFluentIcons.ttf?assembly=WonderLab#Segoe Fluent Icons"/>

		<Setter Property="Template">
			<ControlTemplate>
				<TextBlock Text="{TemplateBinding Glyph}"/>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
