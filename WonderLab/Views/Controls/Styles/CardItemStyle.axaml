<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:controls="using:WonderLab.Views.Controls">
    <Design.PreviewWith>
        <Border Width="1000" BorderBrush="Red" BorderThickness="1">
            <!-- Add Controls for Previewer Here -->
			<StackPanel>
				<controls:CardItem>
					<Button Content="ttt"/>
				</controls:CardItem>
				<controls:CardItem>
					<Button Content="ttt"/>
				</controls:CardItem>
				<controls:CardItem>
					<Button Content="ttt"/>
				</controls:CardItem>
			</StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
	<Style Selector="controls|CardItem">
		<Setter Property="Template">
			<ControlTemplate>
				<Border>
					<Grid RowDefinitions="Auto, Auto">
						<Grid Margin="20 8 20 8" ColumnDefinitions="Auto, 1*, Auto">
							<TextBlock FontSize="13"
									   Foreground="#6E6867"
									   VerticalAlignment="Center"
									   Text="{TemplateBinding Header}"/>

							<ContentControl Grid.Column="2"
									        VerticalAlignment="Center"
											Content="{TemplateBinding Content}"/>
						</Grid>
						
						<Border Height="1"
								Grid.Row="1"
								Background="#E5E7EB"
								HorizontalAlignment="Stretch"
								IsVisible="{TemplateBinding IsLineVisible}"/>
					</Grid>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
