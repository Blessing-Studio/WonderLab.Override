<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:WonderLab.Views.Controls">
	<Design.PreviewWith>
		<Border Padding="20">
			<!-- Add Controls for Previewer Here -->
		</Border>
	</Design.PreviewWith>

	<ControlTheme x:Key="{x:Type controls:ImageBox}" TargetType="controls:ImageBox">
		<Setter Property="Template">
			<ControlTemplate>
				<Panel>
					<Image Name="PART_Image"
						   Stretch="UniformToFill">
						<Image.Transitions>
							<Transitions>
								<EffectTransition Property="Effect"
												  Duration="0:0:0.35"/>
								
								<ThicknessTransition Property="Margin"
													 Duration="0:0:0.45"
													 Easing="CubicEaseOut"/>
							</Transitions>
						</Image.Transitions>
					</Image>

					<controls:ProgressRing Width="50"
										   Height="50"
										   IsVisible="False"
										   BorderThickness="5"
										   IsIndeterminate="True"
										   Name="PART_ProgressRing"
										   VerticalAlignment="Center"
										   HorizontalAlignment="Center"/>
				</Panel>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
