<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:WonderLab.Views.Controls">
	<Design.PreviewWith>
		<Border Padding="20">
			<!-- Add Controls for Previewer Here -->
			<controls:FontIcon Glyph="&#xE76E;" Foreground="Black"/>
		</Border>
	</Design.PreviewWith>

	<ControlTheme x:Key="{x:Type controls:ImageBox}" TargetType="controls:ImageBox">
		<Setter Property="Template">
			<ControlTemplate>
				<Panel>
					<Image Name="PART_Image"
						   Stretch="UniformToFill"/>
					
					<controls:ProgressRing IsIndeterminate="True"
										   Name="PART_ProgressRing"
										   VerticalAlignment="Center"
										   HorizontalAlignment="Center"/>
				</Panel>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
