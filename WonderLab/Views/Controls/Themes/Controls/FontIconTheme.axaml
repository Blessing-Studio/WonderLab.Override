<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:WonderLab.Views.Controls">
	<Design.PreviewWith>
		<Border Padding="20">
			<!-- Add Controls for Previewer Here -->
			<controls:FontIcon Glyph="&#xE76E;" Foreground="Black"/>
		</Border>
	</Design.PreviewWith>

	<FontFamily x:Key="IconFontFamily">resm:WonderLab.Assets.Fonts.SegoeFluentIcons.ttf?assembly=WonderLab#Segoe Fluent Icons</FontFamily>

	<ControlTheme x:Key="{x:Type controls:FontIcon}" TargetType="controls:FontIcon">
		<Setter Property="FontFamily" Value="{StaticResource IconFontFamily}"/>
		<Setter Property="Template">
			<ControlTemplate>
				<TextBlock Classes="fonticon"
						   Text="{TemplateBinding Glyph}"
						   FontSize="{TemplateBinding FontSize}"
						   FontFamily="{TemplateBinding FontFamily}"
						   Background="{TemplateBinding Background}"/>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
