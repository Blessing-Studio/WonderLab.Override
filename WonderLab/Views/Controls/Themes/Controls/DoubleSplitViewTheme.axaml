<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:WonderLab.Views.Controls">
	<Design.PreviewWith>
		<Border Padding="20">
			<!-- Add Controls for Previewer Here -->
			<controls:DoubleSplitView Width="100"
									  Height="100"/>
		</Border>
	</Design.PreviewWith>

	<ControlTheme x:Key="{x:Type controls:DoubleSplitView}" TargetType="controls:DoubleSplitView">
		<Setter Property="Transitions">
			<Transitions>
				<DoubleTransition Property="Width"
								  Duration="0:0:0.35"
								  Easing="QuadraticEaseIn"/>
			</Transitions>
		</Setter>

		<Setter Property="Template">
			<ControlTemplate>
				<Grid ColumnDefinitions="1*, Auto">
					<ContentPresenter Grid.Column="0"
									  Content="{TemplateBinding Content}"/>

					<ContentPresenter Grid.Column="1"
									  Name="rightPanel"
									  Content="{TemplateBinding PanelContent}"
									  Transitions="{TemplateBinding Transitions}"
									  Background="{DynamicResource GameManagerPanelBackground}"/>
				</Grid>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
