<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1000"
             x:Class="WonderLab.Views.Pages.Setting.LaunchSettingPage"
			 xmlns:ui="using:WonderLab.Views.Controls"
			 xmlns:vm="using:WonderLab.ViewModels.Pages.Setting"
			 xmlns:ml="using:MinecraftLaunch.Classes.Models.Game"
			 x:DataType="vm:LaunchSettingPageViewModel">
	<ui:SmoothScrollViewer ScrollViewer.VerticalScrollBarVisibility="Hidden">
		<ItemsControl Margin="0 12 0 12">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Spacing="15"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ui:SettingCard Title="{DynamicResource FolderSettingTitle}">
				<ItemsControl>
					<ui:SettingCardItem Description="{DynamicResource SelectFolder}">
						<ComboBox ItemsSource="{Binding GameFolders}"
								  SelectedItem="{Binding ActiveGameFolder}"/>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource OpenNewFolder}">
						<Button CornerRadius="6"
								CommandParameter="Folder"
								Command="{Binding SearchCommand}"
								Content="{DynamicResource Browse}"/>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource RemoveFolder}">
						<Button CornerRadius="6"
								CommandParameter="Folder"
								Command="{Binding RemoveCommand}"
								Content="{DynamicResource Remove}"/>
					</ui:SettingCardItem>
				</ItemsControl>
			</ui:SettingCard>

			<ui:SettingCard Title="{DynamicResource JavaSettingTitle}">
				<ItemsControl>
					<ui:SettingCardItem Description="{DynamicResource SelectJava}">
						<ComboBox SelectedItem="{Binding ActiveJava}"
								  ItemsSource="{Binding Javas, Mode=TwoWay}">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding JavaPath}"/>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource OpenNewJava}">
						<StackPanel Spacing="8"
									Orientation="Horizontal">
							<Button CornerRadius="6"
									CommandParameter="Java"
									Content="{DynamicResource Browse}"
									Command="{Binding SearchCommand}"/>

							<Button CornerRadius="6"
									Content="{DynamicResource Search}"
									Command="{Binding AutoSearchCommand}"/>
						</StackPanel>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource RemoveJava}">
						<Button CornerRadius="6"
								CommandParameter="Java"
								Command="{Binding RemoveCommand}"
								Content="{DynamicResource Remove}"/>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource AutoSelectJava}">
						<ToggleSwitch OnContent=""
									  OffContent=""
									  Margin="0 0 -10 0"
									  IsChecked="{Binding IsAutoSelectJava}"/>
					</ui:SettingCardItem>
				</ItemsControl>
			</ui:SettingCard>

			<ui:SettingCard Title="{DynamicResource GameSettingTitle}">
				<ItemsControl>
					<ui:SettingCardItem Description="{DynamicResource AllocateMemory}">
						<TextBox Text="{Binding MaxMemory}"
								 UseFloatingWatermark="False"/>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource AutoAllocateMemory}">
						<ToggleSwitch OnContent=""
									  OffContent=""
									  Margin="0 0 -10 0"
									  IsChecked="{Binding IsAutoAllocateMemory}"/>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource GameIndependent}">
						<ToggleSwitch OnContent=""
									  OffContent=""
									  Margin="0 0 -10 0"
									  IsChecked="{Binding IsGameIndependent}"/>
					</ui:SettingCardItem>

					<ui:SettingCardItem Description="{DynamicResource FullScreenMode}">
						<ToggleSwitch OnContent=""
									  OffContent=""
									  Margin="0 0 -10 0"
									  IsChecked="{Binding IsFullScreen}"/>
					</ui:SettingCardItem>
				</ItemsControl>
			</ui:SettingCard>
		</ItemsControl>
	</ui:SmoothScrollViewer>
</UserControl>
