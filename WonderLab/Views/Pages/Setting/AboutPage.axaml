<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:ui="clr-namespace:WonderLab.Views.Controls"
			 xmlns:vm="using:WonderLab.ViewModels.Pages.Setting"
             x:Class="WonderLab.AboutPage"
			 x:DataType="vm:AboutPageViewModel">
	<ui:SmoothScrollViewer ScrollViewer.VerticalScrollBarVisibility="Hidden">
		<Grid Margin="0 24 0 16"
			  RowDefinitions="Auto, Auto, Auto">
			<TextBlock FontSize="20"
					   Text="WonderLab"
		               FontWeight="Bold"
		               VerticalAlignment="Top"
		               HorizontalAlignment="Left"/>
			
			<TextBlock Grid.Row="1"
					   FontSize="12"
					   Text="{DynamicResource Settings_About_Rights}"/>

			<ItemsControl Grid.Row="2"
						  Margin="0 12 0 0">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Spacing="24"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				
				<ui:SettingCard Title="{DynamicResource Settings_About}">
					<ItemsControl>
						<ui:SettingCardItem Description="{DynamicResource Settings_About_Version}">
							<HyperlinkButton Content="2.0.0"
											 Foreground="{DynamicResource SecondaryBrush600}"/>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="{DynamicResource Settings_About_Donate}">
							<HyperlinkButton Content="{DynamicResource Item_Afdian}"
											 Command="{Binding JumpToLinkCommand}"
											 CommandParameter="https://afdian.com/a/WonderLab"
											 Foreground="{DynamicResource SecondaryBrush600}"/>
						</ui:SettingCardItem>
					</ItemsControl>
				</ui:SettingCard>

				<ui:SettingCard Title="{DynamicResource Settings_About_Developers}">
					<ItemsControl>
						<ui:SettingCardItem Description="{DynamicResource Settings_About_Developers_QA}">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="任天天🍰"
												 Command="{Binding JumpToLinkCommand}"
												 CommandParameter="https://github.com/ruattd"
												 Foreground="{DynamicResource SecondaryBrush600}"/>
								
								<HyperlinkButton Content="КРАШ-2073"
												 Command="{Binding JumpToLinkCommand}"
												 CommandParameter="https://github.com/tsavpyn"
												 Foreground="{DynamicResource SecondaryBrush600}"/>
							</StackPanel>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="{DynamicResource Settings_About_Developers_UED}">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="dream_pep"
												 Command="{Binding JumpToLinkCommand}"
												 CommandParameter="https://github.com/dream0090"
												 Foreground="{DynamicResource SecondaryBrush600}"/>
								
								<HyperlinkButton Content="Starcloudsea"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/Starcloudsea"/>
							</StackPanel>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="{DynamicResource Settings_About_Developers_FE}">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="YangSpring114"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/YangSpring114"/>
							</StackPanel>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="{DynamicResource Settings_About_Developers_RD}">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="YangSpring114"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/YangSpring114"/>
								
								<HyperlinkButton Content="JWJUN233233"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/JWJUN233233"/>
								
								<HyperlinkButton Content="mailset"
												 Command="{Binding JumpToLinkCommand}"
												 CommandParameter="https://github.com/mailset"
												 Foreground="{DynamicResource SecondaryBrush600}"/>
							</StackPanel>
						</ui:SettingCardItem>
					</ItemsControl>
				</ui:SettingCard>

				<ui:SettingCard Title="{DynamicResource Settings_About_Thanks}">
					<ItemsControl>
						<ui:SettingCardItem Description="{DynamicResource Settings_About_Thanks_ServerSupport}">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="泽托维尔克"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/SentientWaste"/>
							</StackPanel>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="{DynamicResource Settings_About_Thanks_TechSupport}">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="Natsurainko"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/natsurainko"/>
								
								<HyperlinkButton Content="llr下一你了亲并"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/laolarou726"/>
							</StackPanel>
						</ui:SettingCardItem>
					</ItemsControl>
				</ui:SettingCard>
				<ui:SettingCard Title="{DynamicResource Settings_About_IncludedOSLib}">
					<ItemsControl>
						<ui:SettingCardItem Description="AvaloniaUI">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="Github"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/AvaloniaUI/Avalonia"/>
							</StackPanel>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="CommunityToolkit.Mvvm">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="Github"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/CommunityToolkit/dotnet"/>
							</StackPanel>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="Avalonia.Xaml.Behaviors">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="Github"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/AvaloniaUI/Avalonia.Xaml.Behaviors"/>
							</StackPanel>
						</ui:SettingCardItem>

						<ui:SettingCardItem Description="MinecraftLaunch">
							<StackPanel Spacing="10"
										Orientation="Horizontal">
								<HyperlinkButton Content="Github"
												 Command="{Binding JumpToLinkCommand}"
												 Foreground="{DynamicResource SecondaryBrush600}"
												 CommandParameter="https://github.com/Blessing-Studio/MinecraftLaunch"/>
							</StackPanel>
						</ui:SettingCardItem>
					</ItemsControl>
				</ui:SettingCard>
			</ItemsControl>
		</Grid>
	</ui:SmoothScrollViewer>
</UserControl>