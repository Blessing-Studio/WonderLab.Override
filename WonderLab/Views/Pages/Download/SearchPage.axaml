<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:controls="clr-namespace:WonderLab.Views.Controls"
             x:Class="WonderLab.Views.Download.SearchPage">
	<controls:SmoothScrollViewer>
		<Grid MaxWidth="850"
			  Margin="0 24 0 16"
			  HorizontalAlignment="Stretch"
			  RowDefinitions="Auto, Auto">
			<Grid ColumnDefinitions="Auto, 1*">
				<ComboBox Margin="0 0 12 0">

				</ComboBox>

				<TextBox Grid.Column="1"
						 Watermark="{DynamicResource Download_Search_Watermark}"/>
			</Grid>

			<Grid Grid.Row="1"
				  Margin="0 22 0 0"
				  ColumnDefinitions="0.6*, 12, 1*">
				<controls:ImageCard/>

				<Grid Grid.Column="2"
					  RowDefinitions="Auto, Auto">
					<controls:ImageCard/>

					<Button Grid.Row="1"
							MinHeight="50"
							CornerRadius="12"
							Margin="0 12 0 0"
							Classes="card"
							HorizontalAlignment="Stretch">
						<StackPanel Margin="12 8">
							<TextBlock Text="Download Minecraft"/>

							<TextBlock Text="Find all versions of Minecraft for Windows, Mac, and Linux."
									   FontSize="12"
									   Opacity="0.8"/>
						</StackPanel>
					</Button>
				</Grid>
			</Grid>
		</Grid>
	</controls:SmoothScrollViewer>
</UserControl>
