<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:ui="using:WonderLab.Views.Controls"
			 xmlns:vm="using:WonderLab.ViewModels.Dialogs"
			 x:DataType="vm:TestUserCheckDialogViewModel"
             x:Class="WonderLab.Views.Dialogs.TestUserCheckDialog">
	<ui:DialogContentPanel Title="{DynamicResource Dialog_TestUser_ReuestUUID}"
						   PrimaryButtonContent="{DynamicResource Item_Next}"
						   IsPrimaryButtonVisible="True"
						   IsTopCloseButtonVisible="True"
						   TopCloseButtonCommand="{Binding CloseCommand}"
						   PrimaryButtonCommand="{Binding AuthenticateCommand}"
						   PrimaryButtonCommandParameter="{Binding ElementName=uuidTextBox, Path=Text}">
		<ui:DialogContentPanel.Content>
			<Grid RowDefinitions="Auto, 5, Auto">
				<TextBlock FontSize="12"
						   Text="{DynamicResource Dialog_TestUser_InputUUID}"/>
				
				<TextBox Grid.Row="2"
						 Name="uuidTextBox"
						 UseFloatingWatermark="False"/>
			</Grid>
		</ui:DialogContentPanel.Content>
	</ui:DialogContentPanel>
</UserControl>
