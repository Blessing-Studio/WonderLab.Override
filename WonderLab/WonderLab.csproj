<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Version>1.3.1</Version>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<OutputType>WinExe</OutputType>
		<IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
		<Platform></Platform>
	</PropertyGroup>
	<ItemGroup>
		<None Remove="Assets\Images\normal.png" />
		<None Remove="Assets\Fonts\SegoeFluentIcons.ttf" />
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Include="Assets\Images\normal.png" />
		<EmbeddedResource Include="Assets\Fonts\SegoeFluentIcons.ttf" />
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.0.6" />
    <PackageReference Include="Avalonia.Desktop" Version="11.0.6" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.6" />
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.6" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" Version="11.0.5" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="DialogHost.Avalonia" Version="0.7.7" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
    <PackageReference Include="MinecraftLaunch.Skin" Version="1.0.0" />
	<PackageReference Include="MinecraftLaunch" Version="3.0.0-preview8" />
	<PackageReference Include="Dotnet.Bundle" Version="*" />
  </ItemGroup>

	<ItemGroup>
		<Folder Include="Assets\Languages\" />
	</ItemGroup>

	<ItemGroup>
		<UpToDateCheckInput Remove="Views\Controls\Theme\ControlBasicTheme.axaml" />
	</ItemGroup>

	<PropertyGroup>
		<CFBundleName>WonderLab</CFBundleName>
		<!-- Also defines .app file name -->
		<CFBundleDisplayName>WonderLab</CFBundleDisplayName>
		<CFBundleIdentifier>org.blessing-studio.wonderlab</CFBundleIdentifier>
		<CFBundleVersion>1.3.0</CFBundleVersion>
		<CFBundlePackageType>APPL</CFBundlePackageType>
		<CFBundleSignature>????</CFBundleSignature>
		<CFBundleExecutable>wonderlab</CFBundleExecutable>
		<CFBundleIconFile>wonderlab.icns</CFBundleIconFile>
		<NSPrincipalClass>NSApplication</NSPrincipalClass>
		<NSHighResolutionCapable>true</NSHighResolutionCapable>
		<CFBundleShortVersionString>12.0.2.0</CFBundleShortVersionString>
		<SignAssembly>True</SignAssembly>
		<ApplicationIcon>Assets\wonderlab.ico</ApplicationIcon>
		<StartupObject>WonderLab.Program</StartupObject>
	</PropertyGroup>

	<ItemGroup>
		<EmbeddedResource Include="Assets\wonderlab.ico" />
		<Content Include="Assets\wonderlab.ico" />
		<EmbeddedResource Include="Assets\wonderlab.png" CopyToPublishDirectory="PreserveNewest">
			<LinuxPath>/usr/share/icons/wonderlab.png</LinuxPath>
		</EmbeddedResource>
		<Content Include="wonderlab.desktop" CopyToPublishDirectory="PreserveNewest" Condition="'$(Platform)' == 'linux'">
			<LinuxPath>/usr/share/applications/wonderlab.desktop</LinuxPath>
		</Content>
		<Content Include="start.sh" CopyToPublishDirectory="PreserveNewest" Condition="'$(Platform)' == 'Linux'" />
	</ItemGroup>
</Project>
