<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="wonderlab.Views.Pages.SelectConfigPage">
	<Grid>
		<ContentControl Content="{Binding SelectConfigPage}"/>
		<!--Background="{DynamicResource DialogContentBackground}"-->
		<Border HorizontalAlignment="Right" Height="40" Width="400"
				VerticalAlignment="Bottom" Margin="0 0 -20 10"
			    Background="Red"
				BorderThickness="1"  
				BorderBrush="{DynamicResource DialogContentBorderBrush}"
				RenderTransform="rotate(-15deg)">
			<StackPanel Orientation="Horizontal"
						Spacing="10"
						Margin="115 0 0 0"
						HorizontalAlignment="Center">
				<ToggleButton Content="启动" Background="Transparent"/>
				<ToggleButton Content="下载" Background="Transparent"/>
				<ToggleButton Content="个性化" Background="Transparent"/>
				<Button Content="返回" Background="Transparent"/>
			</StackPanel> 
		</Border>
	</Grid>
</UserControl>
