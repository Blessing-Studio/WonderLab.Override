<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 FontFamily="resm:wonderlab.Assets.Fonts.MiSans-Normal.ttf?assembly=wonderlab#MiSans"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Initialized="InitializedAction"
             x:Class="wonderlab.Views.Pages.ActionCenterPage">
	<Grid>

		<Grid Margin="35">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="10"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<Grid VerticalAlignment="Center">
				<Grid.RenderTransform>
					<TransformGroup>
						<SkewTransform AngleX="-8"/>
					</TransformGroup>
				</Grid.RenderTransform>

				<Grid.RowDefinitions>
					<RowDefinition Height="60"/>
					<RowDefinition Height="15"/>
					<RowDefinition Height="1*"/>
				</Grid.RowDefinitions>
				
				<Border CornerRadius="6" Height="60" VerticalAlignment="Top"
                        Background="{DynamicResource DialogContentBackground}" IsVisible="True"
					    BoxShadow="0 1 4 0 #66000000">
					<StackPanel VerticalAlignment="Center" Margin="10 0">
						<TextBlock Text="{Binding HitokotoTitle}"
								   FontSize="15" FontWeight="SemiBold" Margin="8"
								   TextTrimming="CharacterEllipsis"/>
						<TextBlock Text="{Binding HitokotoCreator}" Margin="8 -8 8 0"/>
					</StackPanel>
				</Border>

				<Border CornerRadius="6" Height="145" BorderBrush="{DynamicResource DialogContentBorderBrush}" BorderThickness="1"
						BoxShadow="0 1 4 0 #66000000" Grid.Row="2" Name="Bitmap">					
					<Border.Background>
						<ImageBrush Source="{Binding NewImage}" Stretch="UniformToFill"/>
					</Border.Background>
					<Grid> 
						<Border Background="{DynamicResource DialogContentBackground}" Height="50"
								VerticalAlignment="Bottom" CornerRadius="0 0 6 6" Name="Content">
							<Border.Transitions>
								<Transitions>
									<DoubleTransition Property="Height"
													  Easing="ExponentialEaseOut"
													  Duration="0:0:0.35"/>
								</Transitions>
							</Border.Transitions>
							
							<Grid>
								<TextBlock Text="{Binding NewTitle}"
										   TextTrimming="CharacterEllipsis"
										   TextAlignment="Right" FontWeight="UltraBold"
										   VerticalAlignment="Bottom"
										   FontSize="18"
										   Margin="10 5 15 22.5"/>

								<TextBlock Text="{Binding NewTag}" Margin="10 0 15 5"
										   TextAlignment="Right"
										   VerticalAlignment="Bottom"/>
							</Grid>
						</Border>
					</Grid>
				</Border>
			</Grid>
			
			<Grid Grid.Column="2">
				<Grid VerticalAlignment="Center" HorizontalAlignment="Right">
					<Grid.RenderTransform>
						<TransformGroup>
							<SkewTransform AngleX="-8"/>
						</TransformGroup>
					</Grid.RenderTransform>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="10"/>
						<RowDefinition Height="1*"/>
					</Grid.RowDefinitions>
					<!--按钮组-->
					<StackPanel Spacing="10" Orientation="Horizontal" HorizontalAlignment="Right">
						<Button Command="{Binding OpenInstallDialogAction}" Height="180" Width="180" Classes="shadowbutton">
							<Grid Margin="10">
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto"/>
									<RowDefinition Height="4"/>
									<RowDefinition Height="Auto"/>
								</Grid.RowDefinitions>

								<TextBlock Text="资源下载" FontSize="20" FontWeight="SemiBold" />

								<Border Background="{DynamicResource AccentBrush}" Grid.Row="2"
										CornerRadius="4" HorizontalAlignment="Left">
									<Grid Margin="2" VerticalAlignment="Center">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto"/>
											<ColumnDefinition Width="4"/>
											<ColumnDefinition Width="1*"/>
										</Grid.ColumnDefinitions>

										<TextBlock Text="最新版本" Foreground="White" FontSize="12"/>
										<TextBlock Text="{Binding LatestGameCore}" Grid.Column="2" Foreground="White"
												   FontSize="12" TextTrimming="CharacterEllipsis" Margin="0 0 5 0"/>
									</Grid>
								</Border>
							</Grid>
						</Button>

						<Button Command="{Binding OpenUserPageAction}" Height="180" Width="180" Classes="shadowbutton">
							<Grid Margin="10">
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto"/>
									<RowDefinition Height="20"/>
									<RowDefinition Height="Auto"/>
								</Grid.RowDefinitions>

								<TextBlock Text="账户中心" FontSize="20" FontWeight="SemiBold"/>

								<Viewbox Grid.Row="2" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom">
									<PathIcon Data="M512 127.62500029C300.12499971 127.62500029 127.62500029 300.12499971 127.62500029 512S300.12499971 896.37499971 512 896.37499971 896.37499971 723.87500029 896.37499971 512 723.87500029 127.62500029 512 127.62500029zM315.125 774.50000029c0-108.74999971 88.12500029-196.875 196.875-196.875S708.875 665.74999971 708.875 774.50000029c-54.37500029 41.24999971-123.75 65.62500029-196.875 65.62499942s-142.49999971-24.37499971-196.875-65.62499942z m112.5-337.5c0-46.87499971 37.50000029-84.375 84.375-84.375s84.375 37.50000029 84.375 84.375-37.50000029 84.375-84.375 84.375-84.375-37.50000029-84.375-84.375z m331.875 288.74999971c-16.875-84.375-74.99999971-153.74999971-153.74999971-185.625 28.125-26.25000029 45-61.875 45-103.12499971 0-76.87500029-63.74999971-140.625-140.625-140.625s-140.625 63.74999971-140.625 140.625c0 41.24999971 16.875 76.87500029 45 103.12499971-78.75 31.87500029-136.87499971 101.25-153.75000058 185.625-48.75000029-58.12499971-80.62499971-131.24999971-80.62499971-213.75 0-180 148.12499971-328.12499971 328.12499971-328.12499971S840.12499971 332 840.12499971 512c0 82.50000029-29.99999971 155.62500029-80.62499971 213.75z"/>
								</Viewbox>
							</Grid>
						</Button>
					</StackPanel>

					<Grid HorizontalAlignment="Left" Width="370" Grid.Row="2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="0.4*"/>
							<ColumnDefinition Width="10"/>
							<ColumnDefinition Width="1*"/>
						</Grid.ColumnDefinitions>
						<Button Command="{Binding OpenSelectConfigPageAction}"
								HorizontalAlignment="Stretch" Classes="shadowbutton">
							<TextBlock Text="设置" FontWeight="SemiBold" />
						</Button>

						<Button Grid.Column="2" HorizontalAlignment="Stretch" Classes="shadowbutton">
							<Grid>
								<TextBlock Text="爆炸电台" FontWeight="SemiBold"/>

								<TextBlock FontSize="12" VerticalAlignment="Center"
										   TextAlignment="Right" Text="正在播放：无"/>
							</Grid>
						</Button>
					</Grid>
				</Grid>
			</Grid>
		</Grid>

		<Border VerticalAlignment="Top" Background="{DynamicResource DialogContentBackground}" Height="30"
			BoxShadow="0 1 4 0 #66000000" Name="TopBar" Margin="0 -45 0 0">
			<Border.Transitions>
				<Transitions>
					<ThicknessTransition Property="Margin"
										 Easing="ExponentialEaseOut"
										 Duration="0:0:0.35"/>
				</Transitions>
			</Border.Transitions>
			<Grid>
				<Grid HorizontalAlignment="Right"
					  VerticalAlignment="Center" Margin="0 0 15 0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="2"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>

					<Button Classes="rotatebutton" Grid.Column="2"
							HorizontalAlignment="Right" Name="close"
							VerticalAlignment="Top" Margin="15 0 0 0"/>

					<Border Background="Black" HorizontalAlignment="Right"
							VerticalAlignment="Stretch" Width="1"
							Grid.Column="1">
						<Border.RenderTransform>
							<TransformGroup>
								<SkewTransform AngleX="-8"/>
							</TransformGroup>
						</Border.RenderTransform>
					</Border>

					<Button Name="Mini"
							Grid.Column="0"
							HorizontalAlignment="Right"
							VerticalAlignment="Center"
							Classes="rotatebutton1"
							Margin="0 0 15 0"/>
				</Grid>

				<Border Background="{DynamicResource AccentBrush}" Height="2" VerticalAlignment="Bottom" CornerRadius="10"
		                HorizontalAlignment="Left" Width="110" Margin="20 0 0 2"/>

				<TextBlock Text="操作中心" FontWeight="SemiBold" FontSize="16"
						   Margin="70 0 0 5" VerticalAlignment="Bottom"/>

				<Button Height="40" Width="40" Classes="wonderaccentbutton" HorizontalAlignment="Left"
						CornerRadius="114514" Margin="15 20 0 0" Padding="0" Command="{Binding ReturnAction}">
					<Viewbox Width="20">
						<Path Fill="White" Data="M925.93485 420.743202H170.450671l307.293565 307.438889c11.630934 11.635911 11.382091 30.73712-0.555418 42.669653-11.936514 11.930542-31.038718 12.169431-42.669653 0.53352l-357.299118-357.478285a30.409643 30.409643 0 0 1-5.269505-5.686566c-4.02927-5.34814-5.986174-11.785217-5.878673-18.243198-0.129398-7.758933 2.712392-15.489 8.556227-21.332835L434.52016 8.573148c11.630934-11.636907 30.733139-11.397022 42.669653 0.532525 11.937509 11.930542 12.186353 31.032746 0.555418 42.670648L170.031619 359.634263h755.903231c16.450531 0 29.786539 13.675431 29.786539 30.551981s-13.336008 30.556958-29.786539 30.556958z"/>
					</Viewbox>
				</Button>
			</Grid>
		</Border>
	</Grid>
</UserControl>
