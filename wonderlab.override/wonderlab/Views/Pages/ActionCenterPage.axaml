					</Viewbox>
				</Button>
			</StackPanel>

			<Border CornerRadius="10" Width="770" HorizontalAlignment="Left"
					Height="60" Background="AliceBlue" Margin="0 5 15 0">
				<StackPanel VerticalAlignment="Center" Margin="10 0">
					<TextBlock Text="哼哼哼，啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
							   FontSize="15" FontWeight="SemiBold" Margin="8"
							   TextTrimming="CharacterEllipsis"/>
					<TextBlock Text="-- 田所浩二" Margin="8 -8 8 0"/>
				</StackPanel>
			</Border>
		</StackPanel>

		<Grid Margin="15 265 0 60" VerticalAlignment="Top" Height="130">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" MaxWidth="480"/>
				<ColumnDefinition Width="15"/>
				<ColumnDefinition Width="0.6*"/>
			</Grid.ColumnDefinitions>

			<Border CornerRadius="10" ClipToBounds="True" >
				<Grid ClipToBounds="True">
					<Image Source="{Binding NewImage}"
						   Stretch="UniformToFill"/>

					<Grid Background="AliceBlue" VerticalAlignment="Bottom">
						<TextBlock Text="{Binding NewTitle}"
								   TextTrimming="CharacterEllipsis"
								   TextAlignment="Right" FontWeight="UltraBold"
								   VerticalAlignment="Bottom"
								   FontSize="18"
								   Margin="10 5 15 22.5"/>

						<TextBlock Text="{Binding NewTag}" Margin="10 0 15 5"
								   TextAlignment="Right"
								   VerticalAlignment="Bottom"/>
					</Grid>
				</Grid>
			</Border>

			<Grid Grid.Column="2" MaxWidth="400" Margin="0 0 15 0" HorizontalAlignment="Left">
				<Grid.RowDefinitions>
					<RowDefinition Height="1*"/>
					<RowDefinition Height="8"/>
					<RowDefinition Height="1*"/>
				</Grid.RowDefinitions>

				<Button Width="275" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
						CornerRadius="10" Content="敬请期待"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center"/>
				
				<Button Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
						CornerRadius="10" Content="敬请期待"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center"/>
			</Grid>
		</Grid>

		<Button Command="{Binding ReturnAction}" HorizontalAlignment="Left" Content="返回"
				VerticalAlignment="Bottom" Margin="15" Width="130" HorizontalContentAlignment="Center"/>
	</Grid>
</UserControl>
