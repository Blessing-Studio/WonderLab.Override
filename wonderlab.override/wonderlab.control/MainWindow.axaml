        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="wonderlab.control.MainWindow" 
		xmlns:wcd="using:wonderlab.control.Controls.Dialog"
		xmlns:wcb="using:wonderlab.control.Controls.Bar"
        Title="wonder style">
	<Grid>
		<TextBlock Text="Dialog" FontSize="20" Margin="10 10 0 0"
				   HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<Button HorizontalAlignment="Left"
				VerticalAlignment="Top" Margin="10 50 0 0"
				Content="Open Dialog" Name="button"/>

		<TextBlock Text="Button" FontSize="20" Margin="10 90 0 0"
		   HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<StackPanel Spacing="10" HorizontalAlignment="Left" VerticalAlignment="Top"
					Margin="10 120 0 0">
			<Button Content="Click Me" Click="ShowDialogClick"/>
			<Button Content="Click Me" Classes="wonderaccentbutton"
				    Click="ShowDialogClick"/>
		</StackPanel>
 
		<wcb:ToolBar HorizontalAlignment="Right"
					 Margin="15" Name="tb"/>
		
		<TextBlock FontSize="20" Margin="10 200 0 0" IsVisible="False"
				   Text="Change Theme"/>
		<ToggleSwitch Margin="10 230 0 0" IsVisible="False"
					  VerticalAlignment="Top"
					  OnContent="" OffContent=""
					  Name="ThemeChange"/>
		
		<wcb:BottomActionBar Name="bab" IsVisible="False"/>


		<Border VerticalAlignment="Bottom"
				HorizontalAlignment="Stretch"
				Margin="30">
			<Grid>
				<Border Background="{DynamicResource DialogContentBackground}"
		                BoxShadow="0 2 16 0 #66000000" CornerRadius="8"
		                BorderBrush="{DynamicResource DialogContentBorderBrush}"
		                BorderThickness="1" Height="45">
				</Border>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>

					<Grid Margin="15 -35 0 0" Grid.Column="0"> 
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="80"/>
							<ColumnDefinition Width="20"/>
							<ColumnDefinition Width="80"/>
							<ColumnDefinition Width="10"/>
							<ColumnDefinition Width="80"/>
						</Grid.ColumnDefinitions>

