						<TextBlock FontSize="10" Opacity="0.65"
								   Text="当前核心" HorizontalAlignment="Right"/>

						<TextBlock FontSize="12" Grid.Row="2" TextTrimming="CharacterEllipsis"
								   Text="1.12.2-WonderLab-DemoClient" TextAlignment="Right"/>
					</Grid>
				</Grid>
			</Grid>
		</Border>
		
		
		<wcd:UpdateDialog Title="Info" x:Name="d"
				  Message="This is message in MessageDialog!"/>


		<ProgressBar HorizontalAlignment="Left" Classes="Circle"
					 Margin="15" IsIndeterminate="True" FontWeight="ExtraBold"/>
		<Grid x:Name="grid" VerticalAlignment="Top" HorizontalAlignment="Center">
		</Grid>		
	</Grid>
</Window>
