<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="800" Height="450"
        x:Class="wonderlab.control.MainWindow"
		xmlns:wcd="using:wonderlab.control.Controls.Dialog"
		xmlns:wcc="using:wonderlab.control.Controls"
        Title="wonderlab.control" Background="White">
	<Grid>
		<wcd:InstallDialog Name="id"/>
		<Button HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Content="Show" Name="Show"/>
		<Button HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Content="Hide" Name="Hide"/>

		<Button HorizontalAlignment="Center"
		VerticalAlignment="Top"
		Content="Action" Name="Action"/>

		<ProgressBar Classes="circular" Height="260"
			 IsIndeterminate="True" Width="260" />
	</Grid>
</Window>
